<Window x:Class="CivicFix.UI.AssignAgentView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Assign Agent"
        Height="300"
        Width="400"
        WindowStartupLocation="CenterScreen">

    <StackPanel Margin="20">
        <TextBlock Text="Select Available Agent"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>

        <ComboBox ItemsSource="{Binding AvailableAgents}"
                  DisplayMemberPath="Name"
                  SelectedValuePath="Id"
                  SelectedValue="{Binding SelectedAgentId}"
                  Height="30"/>

        <Button Content="Assign"
                Margin="0,20,0,0"
                Height="35"
                Click="Assign_Click"/>
    </StackPanel>
</Window>
