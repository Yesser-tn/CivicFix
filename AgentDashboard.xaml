<Window x:Class="CivicFix.UI.AgentDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agent Dashboard"
        Height="460"
        Width="840"
        WindowStartupLocation="CenterScreen"
        Background="#0F172A">

    <Grid Margin="16">
        <Border Background="#020617"
                CornerRadius="16"
                Padding="14"
                BorderBrush="#1E293B"
                BorderThickness="1">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- HEADER / STATS (COMPACT) -->
                <Grid Margin="2,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- LEFT -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe Fluent Icons"
                                   Text="&#xE77B;"
                                   FontSize="16"
                                   Foreground="#60A5FA"
                                   Margin="0,0,8,0"/>

                        <TextBlock Text="Agent Dashboard"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#E5E7EB"/>
                    </StackPanel>

                    <!-- RIGHT -->
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">

                        <!-- Active Issues (SLIM) -->
                        <Border Background="#1E293B"
                                CornerRadius="10"
                                Padding="8,2"
                                Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Active:"
                                           Foreground="#94A3B8"
                                           Margin="0,0,4,0"/>
                                <TextBlock Text="{Binding ActiveIssuesCount}"
                                           FontWeight="SemiBold"
                                           Foreground="#E5E7EB"/>
                            </StackPanel>
                        </Border>

                        <!-- Availability (SLIM BADGE) -->
                        <Border CornerRadius="10"
                                Padding="8,2"
                                MinWidth="80">
                            <TextBlock Text="{Binding Availability}"
                                       FontWeight="SemiBold"
                                       FontSize="12"
                                       Foreground="#020617"
                                       HorizontalAlignment="Center"/>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#CBD5E1"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Availability}" Value="Available">
                                            <Setter Property="Background" Value="#22C55E"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Availability}" Value="Busy">
                                            <Setter Property="Background" Value="#FACC15"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Availability}" Value="Offline">
                                            <Setter Property="Background" Value="#EF4444"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>

                    </StackPanel>
                </Grid>

                <!-- ISSUES GRID (DENSE) -->
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding Issues}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          MouseDoubleClick="Issue_DoubleClick"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          BorderThickness="0"
                          FontSize="13"
                          RowHeight="34"
                          ColumnHeaderHeight="32"
                          Background="#020617"
                          Foreground="#E5E7EB"
                          AlternatingRowBackground="#020617"
                          RowBackground="#020617"
                          SelectionMode="Single"
                          SelectionUnit="FullRow">

                    <!-- HEADERS -->
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#020617"/>
                            <Setter Property="Foreground" Value="#94A3B8"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="10,4"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <!-- ROW -->
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1E293B"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#334155"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <!-- CELL -->
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="10,3"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.Columns>

                        <!-- TITLE -->
                        <DataGridTextColumn Header="TITLE"
                                            Binding="{Binding Title}"
                                            Width="*" />

                        <!-- CATEGORY -->
                        <DataGridTextColumn Header="CATEGORY"
                                            Binding="{Binding Category}"
                                            Width="130" />

                        <!-- STATUS (COMPACT BADGE) -->
                        <DataGridTemplateColumn Header="STATUS"
                                                Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Padding="6,2"
                                            CornerRadius="10"
                                            MinWidth="80"
                                            HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding Status}"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   Foreground="#020617"
                                                   HorizontalAlignment="Center"/>
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#CBD5E1"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="In Progress">
                                                        <Setter Property="Background" Value="#60A5FA"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Resolved">
                                                        <Setter Property="Background" Value="#22C55E"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                        <Setter Property="Background" Value="#FACC15"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- DATE -->
                        <DataGridTextColumn Header="DATE"
                                            Binding="{Binding CreatedAt}"
                                            Width="160" />

                    </DataGrid.Columns>
                </DataGrid>

            </Grid>
        </Border>
    </Grid>
</Window>
