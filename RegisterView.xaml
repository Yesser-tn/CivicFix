<Window x:Class="CivicFix.UI.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Citizen Registration"
        Height="460"
        Width="420"
        WindowStartupLocation="CenterScreen"
        Background="#0F172A"
        ResizeMode="NoResize">

    <Grid>
        <Border Background="#020617"
                CornerRadius="18"
                Padding="26"
                Width="360"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                BorderBrush="#1E293B"
                BorderThickness="1">

            <StackPanel>

                <!-- HEADER -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,26">
                    <TextBlock FontFamily="Segoe Fluent Icons"
                               Text="&#xE77B;"
                               FontSize="22"
                               Foreground="#60A5FA"
                               Margin="0,0,10,0"/>
                    <TextBlock Text="Citizen Registration"
                               FontSize="22"
                               FontWeight="SemiBold"
                               Foreground="#E5E7EB"/>
                </StackPanel>

                <!-- FULL NAME -->
                <TextBlock Text="Full Name"
                           FontSize="13"
                           Foreground="#94A3B8"/>
                <TextBox Height="38"
                         Padding="10,4"
                         FontSize="13"
                         Background="#020617"
                         Foreground="#E5E7EB"
                         BorderBrush="#334155"
                         Margin="0,6,0,14"
                         Text="{Binding FullName}" />

                <!-- EMAIL -->
                <TextBlock Text="Email"
                           FontSize="13"
                           Foreground="#94A3B8"/>
                <TextBox Height="38"
                         Padding="10,4"
                         FontSize="13"
                         Background="#020617"
                         Foreground="#E5E7EB"
                         BorderBrush="#334155"
                         Margin="0,6,0,14"
                         Text="{Binding Email}" />

                <!-- PASSWORD -->
                <TextBlock Text="Password"
                           FontSize="13"
                           Foreground="#94A3B8"/>
                <PasswordBox x:Name="PasswordBox"
                             Height="38"
                             Padding="10,4"
                             Background="#020617"
                             Foreground="#E5E7EB"
                             BorderBrush="#334155"
                             Margin="0,6,0,22"/>

                <!-- REGISTER -->
                <Button Height="42"
                        Background="#2563EB"
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="Register_Click">

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <TextBlock FontFamily="Segoe Fluent Icons"
                                   Text="&#xE8FA;"
                                   FontSize="15"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="Create Account"/>
                    </StackPanel>
                </Button>

            </StackPanel>
        </Border>
    </Grid>
</Window>
