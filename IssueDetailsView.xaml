<Window x:Class="CivicFix.UI.IssueDetailsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Issue Details"
        Height="450"
        Width="600"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel>

            <TextBlock Text="{Binding Title}"
                       FontSize="22"
                       FontWeight="Bold"
                       Margin="0,0,0,15"/>

            <TextBlock Text="Category" FontWeight="Bold"/>
            <TextBlock Text="{Binding Category}" Margin="0,0,0,10"/>

            <TextBlock Text="Status" FontWeight="Bold"/>
            <TextBlock Text="{Binding Status}" Margin="0,0,0,10"/>

            <TextBlock Text="Created At" FontWeight="Bold"/>
            <TextBlock Text="{Binding CreatedAt}" Margin="0,0,0,15"/>

            <TextBlock Text="Description" FontWeight="Bold"/>
            <TextBlock Text="{Binding Description}"
                       TextWrapping="Wrap"
                       Margin="0,5,0,0"/>

        </StackPanel>
    </Grid>
</Window>
