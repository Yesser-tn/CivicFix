<Window x:Class="CivicFix.UI.AdminCitizenIssuesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Citizen Activity"
        Height="440"
        Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#0F172A">

    <Grid Margin="16">
        <Border Background="#020617"
                CornerRadius="16"
                Padding="14"
                BorderBrush="#1E293B"
                BorderThickness="1">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- HEADER (COMPACT) -->
                <StackPanel Orientation="Horizontal" Margin="2,0,0,12">
                    <TextBlock FontFamily="Segoe Fluent Icons"
                               Text="&#xE716;"
                               FontSize="16"
                               Foreground="#60A5FA"
                               Margin="0,0,8,0"/>
                    <TextBlock Text="Citizen Activity Overview"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#E5E7EB"/>
                </StackPanel>

                <!-- DATA GRID (DENSE) -->
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding Citizens}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          BorderThickness="0"
                          FontSize="13"
                          RowHeight="34"
                          ColumnHeaderHeight="32"
                          Background="#020617"
                          Foreground="#E5E7EB"
                          AlternatingRowBackground="#020617"
                          RowBackground="#020617"
                          SelectionMode="Single"
                          SelectionUnit="FullRow">

                    <!-- COLUMN HEADERS -->
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#020617"/>
                            <Setter Property="Foreground" Value="#94A3B8"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="10,4"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <!-- ROW STYLE -->
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1E293B"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#334155"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <!-- CELL STYLE (COMPACT) -->
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="10,3"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.Columns>

                        <!-- CITIZEN -->
                        <DataGridTextColumn Header="CITIZEN"
                                            Binding="{Binding FullName}"
                                            Width="*" />

                        <!-- EMAIL -->
                        <DataGridTextColumn Header="EMAIL"
                                            Binding="{Binding Email}"
                                            Width="240" />

                        <!-- ISSUES -->
                        <DataGridTextColumn Header="ISSUES"
                                            Binding="{Binding IssueCount}"
                                            Width="120" />

                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

        </Border>
    </Grid>
</Window>
