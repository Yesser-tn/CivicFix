<Window x:Class="CivicFix.UI.AdminAgentAvailabilityView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agent Availability"
        Height="400"
        Width="750"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <DataGrid ItemsSource="{Binding Agents}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Name"
                                    Binding="{Binding FullName}"
                                    Width="*"/>

                <DataGridTextColumn Header="Email"
                                    Binding="{Binding Email}"
                                    Width="220"/>

                <DataGridTextColumn Header="Active Issues"
                                    Binding="{Binding ActiveIssues}"
                                    Width="120"/>

                <DataGridTextColumn Header="Availability"
                                    Binding="{Binding Availability}"
                                    Width="120"/>
            </DataGrid.Columns>

        </DataGrid>
    </Grid>
</Window>
