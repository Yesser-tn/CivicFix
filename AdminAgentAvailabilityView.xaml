<Window x:Class="CivicFix.UI.AdminAgentAvailabilityView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agent Availability"
        Height="440"
        Width="780"
        WindowStartupLocation="CenterScreen"
        Background="#0F172A">

    <Grid Margin="16">
        <Border Background="#020617"
                CornerRadius="16"
                Padding="14"
                BorderBrush="#1E293B"
                BorderThickness="1">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- HEADER (COMPACT) -->
                <StackPanel Orientation="Horizontal" Margin="2,0,0,12">
                    <TextBlock FontFamily="Segoe Fluent Icons"
                               Text="&#xE77B;"
                               FontSize="16"
                               Foreground="#60A5FA"
                               Margin="0,0,8,0"/>

                    <TextBlock Text="Agent Availability"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#E5E7EB"/>
                </StackPanel>

                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding Agents}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          BorderThickness="0"
                          FontSize="13"
                          RowHeight="36"
                          ColumnHeaderHeight="34"
                          Background="#020617"
                          Foreground="#E5E7EB"
                          AlternatingRowBackground="#020617"
                          RowBackground="#020617"
                          SelectionMode="Single"
                          SelectionUnit="FullRow">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#020617"/>
                            <Setter Property="Foreground" Value="#94A3B8"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="10,4"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1E293B"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#334155"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="10,3"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.Columns>

                        <DataGridTextColumn Header="AGENT"
                                            Binding="{Binding FullName}"
                                            Width="*"/>

                        <DataGridTextColumn Header="EMAIL"
                                            Binding="{Binding Email}"
                                            Width="240"/>

                        <DataGridTextColumn Header="ISSUES"
                                            Binding="{Binding ActiveIssues}"
                                            Width="100"/>

                        <DataGridTemplateColumn Header="STATUS"
                                                Width="130">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Padding="6,2"
                                            CornerRadius="10"
                                            MinWidth="80"
                                            HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding Availability}"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   Foreground="#020617"
                                                   HorizontalAlignment="Center"/>
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#CBD5E1"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Availability}" Value="Available">
                                                        <Setter Property="Background" Value="#22C55E"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Availability}" Value="Busy">
                                                        <Setter Property="Background" Value="#FACC15"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Availability}" Value="Offline">
                                                        <Setter Property="Background" Value="#EF4444"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

        </Border>
    </Grid>
</Window>
