<Window x:Class="CivicFix.UI.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login"
        Height="360"
        Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#0F172A"
        ResizeMode="NoResize">

    <Grid>
        <Border Background="#020617"
                CornerRadius="16"
                Padding="18"
                Width="340"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                BorderBrush="#1E293B"
                BorderThickness="1">

            <StackPanel>

                <!-- HEADER (COMPACT) -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,18">
                    <TextBlock FontFamily="Segoe Fluent Icons"
                               Text="&#xE77B;"
                               FontSize="20"
                               Foreground="#60A5FA"
                               Margin="0,0,8,0"/>
                    <TextBlock Text="CivicFix Login"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="#E5E7EB"/>
                </StackPanel>

                <!-- EMAIL -->
                <TextBlock Text="Email"
                           FontSize="12"
                           Foreground="#94A3B8"/>
                <TextBox Height="34"
                         Padding="8,3"
                         FontSize="13"
                         Background="#020617"
                         Foreground="#E5E7EB"
                         BorderBrush="#334155"
                         Margin="0,4,0,12"
                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />

                <!-- PASSWORD -->
                <TextBlock Text="Password"
                           FontSize="12"
                           Foreground="#94A3B8"/>
                <PasswordBox x:Name="PasswordBox"
                             Height="34"
                             Padding="8,3"
                             Background="#020617"
                             Foreground="#E5E7EB"
                             BorderBrush="#334155"
                             Margin="0,4,0,16"/>

                <!-- LOGIN -->
                <Button Height="36"
                        Background="#2563EB"
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="Login_Click">

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <TextBlock FontFamily="Segoe Fluent Icons"
                                   Text="&#xE72E;"
                                   FontSize="14"
                                   Margin="0,0,6,0"/>
                        <TextBlock Text="Login"/>
                    </StackPanel>
                </Button>

                <!-- REGISTER (CLEAR SECONDARY ACTION) -->
                <Button Margin="0,10,0,0"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="Register_Click">
                    <TextBlock Text="Create an account"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#60A5FA"
                               HorizontalAlignment="Center"/>
                </Button>

            </StackPanel>
        </Border>
    </Grid>
</Window>
