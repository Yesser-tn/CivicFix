<Window x:Class="CivicFix.UI.AgentIssuesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agent – Issues"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <DataGrid ItemsSource="{Binding Issues}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  MouseDoubleClick="Issues_DoubleClick">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="150"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="150"/>
                <DataGridTextColumn Header="Created At" Binding="{Binding CreatedAt}" Width="180"/>
            </DataGrid.Columns>

        </DataGrid>
    </Grid>
</Window>
